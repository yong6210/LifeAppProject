rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{userId} {
      allow read, write: if isSignedIn() && request.auth.uid == userId;

      match /settings {
        allow read, write: if isSignedIn() && request.auth.uid == userId;
      }

      match /daily_summaries/{dateKey} {
        allow read, write: if isSignedIn() && request.auth.uid == userId;
      }
    }
  }

  function isSignedIn() {
    return request.auth != null;
  }
}
