rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{userId} {
      allow read, write: if isSignedIn() && request.auth.uid == userId;

      match /settings {
        allow read, write: if isSignedIn() && request.auth.uid == userId;
      }

      match /daily_summaries/{dateKey} {
        allow read, write: if isSignedIn() && request.auth.uid == userId;
      }
    }

    match /challenges/{challengeId} {
      allow create: if isSignedIn()
        && request.resource.data.ownerId == request.auth.uid
        && request.auth.uid in request.resource.data.memberIds;
      allow read: if isSignedIn() && (
        resource.data.ownerId == request.auth.uid
        || request.auth.uid in resource.data.memberIds
        || resource.data.privacy == 'public'
      );
      allow update, delete: if isSignedIn() && (
        resource.data.ownerId == request.auth.uid
        || request.auth.uid in resource.data.memberIds
      );

      match /members/{memberId} {
        allow read: if isSignedIn() && (
          request.auth.uid == memberId
          || isChallengeMember(challengeId)
        );
        allow write: if isSignedIn() && request.auth.uid == memberId;
      }
    }
  }

  function isSignedIn() {
    return request.auth != null;
  }

  function isChallengeMember(challengeId) {
    let challenge = get(/databases/$(database)/documents/challenges/$(challengeId));
    return challenge.data.ownerId == request.auth.uid
      || request.auth.uid in challenge.data.memberIds;
  }
}
